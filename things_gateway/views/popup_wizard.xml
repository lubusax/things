<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id='new_gate_wizard_form'
            model='ir.ui.view'>
            
        <field name='name'>gate confirm wizard form view</field>
        <field name='model'>gate.confirm.wizard</field>
        <field name='arch' type='xml'>
            <form string="Confirm New Gate">
                <sheet>
                    <!-- <group>
                        <field name='name'/>
                        <field name='location'/>
                    </group> -->
                </sheet>
                <footer>
                    <button string='Confirm'
                            type='object'
                            name='confirm_new_gate'
                            class='btn-primary'/>
                    <button string='Cancel'
                            class='btn-default'
                            special='cancel'/>
                </footer>
            </form>
        </field>
    </record>

</odoo>